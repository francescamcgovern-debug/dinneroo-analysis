{
  "version": "2.0",
  "last_updated": "2026-01-07",
  "description": "Unified Dish Scoring Framework - Two-track approach with validated factors",
  
  "framework_philosophy": {
    "principle": "Score dishes on BOTH performance (what families actually do) AND opportunity (latent demand + validated fit factors)",
    "key_change": "Factors validated through correlation analysis - only factors that impact success are included",
    "validation_report": "DELIVERABLES/reports/factor_validation_analysis.md"
  },
  
  "total_weight": 1.0,
  
  "tracks": {
    "performance": {
      "weight": 0.50,
      "description": "How well does this dish perform? Based on behavioral data.",
      "note": "Only applies to dishes with Snowflake/survey data. Others get N/A.",
      "components": {
        "normalized_sales": {
          "weight_within_track": 0.20,
          "effective_weight": 0.10,
          "source": "Snowflake orders",
          "calculation": "Order volume normalized for availability",
          "scoring": {
            "5": "Top 10% of normalized sales",
            "4": "Top 25%",
            "3": "Top 50%",
            "2": "Bottom 50%",
            "1": "Bottom 25%"
          }
        },
        "zone_ranking_strength": {
          "weight_within_track": 0.20,
          "effective_weight": 0.10,
          "source": "Snowflake orders",
          "calculation": "% of zones where dish ranks in top 5",
          "scoring": {
            "5": "Top 5 in 60%+ of zones",
            "4": "Top 5 in 40%+ of zones",
            "3": "Top 5 in 20%+ of zones",
            "2": "Top 5 in 10%+ of zones",
            "1": "Rarely in top 5"
          }
        },
        "deliveroo_rating": {
          "weight_within_track": 0.20,
          "effective_weight": 0.10,
          "source": "Snowflake ratings",
          "calculation": "Average star rating",
          "scoring": {
            "5": "4.5+ stars",
            "4": "4.3-4.49 stars",
            "3": "4.0-4.29 stars",
            "2": "3.5-3.99 stars",
            "1": "Below 3.5 stars"
          }
        },
        "repeat_intent": {
          "weight_within_track": 0.10,
          "effective_weight": 0.05,
          "source": "Post-order survey",
          "survey_question": "I would like to order the same dish again",
          "calculation": "% Agree or Strongly agree",
          "scoring": {
            "5": "80%+ would reorder",
            "4": "70-79%",
            "3": "60-69%",
            "2": "50-59%",
            "1": "Below 50%"
          }
        },
        "kids_full_happy": {
          "weight_within_track": 0.15,
          "effective_weight": 0.075,
          "source": "Post-order survey",
          "survey_question": "How did your child(ren) react to the meal?",
          "calculation": "% Full and happy",
          "scoring": {
            "5": "85%+ kids happy",
            "4": "75-84%",
            "3": "65-74%",
            "2": "55-64%",
            "1": "Below 55%"
          }
        },
        "liked_loved_it": {
          "weight_within_track": 0.15,
          "effective_weight": 0.075,
          "source": "Post-order survey",
          "survey_question": "How did you feel about the meal?",
          "calculation": "% Loved it or Liked it",
          "scoring": {
            "5": "90%+ satisfied",
            "4": "80-89%",
            "3": "70-79%",
            "2": "60-69%",
            "1": "Below 60%"
          }
        }
      }
    },
    
    "opportunity": {
      "weight": 0.50,
      "description": "How much potential does this dish have? Based on latent demand + validated fit factors.",
      "note": "Can be scored for ANY dish type, including those not on Dinneroo.",
      "components": {
        "latent_demand": {
          "weight_within_track": 0.50,
          "effective_weight": 0.25,
          "source": "Combined from all sources",
          "methodology": "scripts/phase2_analysis/extract_latent_demand.py",
          "sub_sources": {
            "open_text_mentions": {
              "weight": 0.45,
              "sources": ["dropoff survey", "post-order survey", "ratings comments"]
            },
            "og_survey_wishlist": {
              "weight": 0.30,
              "source": "OG Survey wishlist percentage"
            },
            "barrier_signals": {
              "weight": 0.25,
              "source": "Dropoff survey barriers indicating unmet demand"
            }
          },
          "scoring": {
            "5": "20+ combined mentions OR 15%+ wishlist",
            "4": "10-19 mentions OR 10-14% wishlist",
            "3": "5-9 mentions OR 5-9% wishlist",
            "2": "2-4 mentions",
            "1": "0-1 mentions"
          }
        },
        
        "validated_fit_factors": {
          "weight_within_track": 0.50,
          "effective_weight": 0.25,
          "description": "Only factors validated through correlation analysis",
          "validation_criteria": {
            "impact_score_threshold": 0.1,
            "methodology": "Correlation with success metrics (order volume, rating, satisfaction)"
          },
          "factors": {
            "adult_appeal": {
              "weight_within_factors": 0.41,
              "effective_weight": 0.1025,
              "validation": {
                "impact_score": 0.204,
                "pearson_mean": 0.196,
                "spearman_mean": 0.213,
                "rationale": "Strongest correlation with order volume and adult satisfaction"
              },
              "description": "Adults genuinely enjoy this dish - restaurant-quality, good flavors",
              "scoring": {
                "5": "Restaurant-quality that adults actively want",
                "4": "Adults genuinely enjoy it",
                "3": "Adults tolerate it, acceptable",
                "2": "More kid-focused, adults wouldn't choose",
                "1": "Adults wouldn't order for themselves"
              },
              "scoring_method": "survey_if_available_else_llm"
            },
            "balanced_guilt_free": {
              "weight_within_factors": 0.37,
              "effective_weight": 0.0925,
              "validation": {
                "impact_score": 0.184,
                "pearson_mean": 0.174,
                "spearman_mean": 0.286,
                "rationale": "Strong correlation with kids happy rate and adult satisfaction"
              },
              "description": "Parents feel good serving it on a Tuesday - balanced midweek meal",
              "scoring": {
                "5": "Clearly balanced, visible protein + veg + carbs",
                "4": "Mostly balanced, some vegetables",
                "3": "Neutral - can go either way",
                "2": "Indulgent but some redeeming qualities",
                "1": "Pure treat/indulgence"
              },
              "scoring_method": "survey_if_available_else_llm"
            },
            "fussy_eater_friendly": {
              "weight_within_factors": 0.22,
              "effective_weight": 0.055,
              "validation": {
                "impact_score": 0.109,
                "pearson_mean": -0.059,
                "spearman_mean": -0.164,
                "rationale": "Correlation with portions adequate; 1,037 mentions in dropoff survey"
              },
              "description": "Mild options available, customisable for picky kids",
              "scoring": {
                "5": "Mild by default, universally appealing",
                "4": "Mild option available, familiar ingredients",
                "3": "Can be made mild on request",
                "2": "Some unfamiliar ingredients",
                "1": "Spicy/complex by nature"
              },
              "scoring_method": "survey_if_available_else_llm"
            }
          },
          "excluded_factors": {
            "kid_friendly": {
              "impact_score": 0.080,
              "reason": "Below 0.1 threshold - weak correlation with success metrics"
            },
            "shareability": {
              "impact_score": 0.055,
              "reason": "Below 0.1 threshold - no meaningful correlation"
            },
            "value_at_25": {
              "impact_score": 0.046,
              "reason": "Below 0.1 threshold - negative correlation with rating"
            },
            "vegetarian_option": {
              "impact_score": 0.032,
              "reason": "Below 0.1 threshold - no meaningful correlation"
            },
            "portion_flexibility": {
              "reason": "Partner-level attribute, not dish-type level"
            },
            "customisation": {
              "reason": "Partner-level attribute, not dish-type level"
            }
          }
        }
      }
    }
  },
  
  "composite_score_calculation": {
    "formula": "Performance (50%) + Opportunity (50%)",
    "performance_formula": "(normalized_sales × 0.10) + (zone_ranking × 0.10) + (rating × 0.10) + (repeat_intent × 0.05) + (kids_happy × 0.075) + (liked_loved × 0.075)",
    "opportunity_formula": "(latent_demand × 0.25) + (adult_appeal × 0.1025) + (balanced × 0.0925) + (fussy_eater × 0.055)",
    "max_score": 5.0,
    "min_score": 1.0,
    "note": "For dishes without performance data, opportunity score is doubled"
  },
  
  "tier_classification": {
    "tier_1_must_have": {
      "threshold": 3.80,
      "label": "Must-Have",
      "action": "Essential for every MVP zone",
      "note": "Updated Jan 2026 after data validation - 5 dishes"
    },
    "tier_2_should_have": {
      "threshold": 3.20,
      "label": "Should-Have",
      "action": "Important for zone strength"
    },
    "tier_3_nice_to_have": {
      "threshold": 2.70,
      "label": "Nice-to-Have",
      "action": "Good for variety"
    },
    "tier_4_monitor": {
      "threshold": 0,
      "label": "Monitor",
      "action": "Investigate or deprioritize"
    }
  },
  
  "evidence_levels": {
    "validated": {
      "criteria": "Has performance data (50+ orders) AND survey data (n >= 5)",
      "confidence": "High - strategic decisions"
    },
    "corroborated": {
      "criteria": "Has performance data OR survey data (not both)",
      "confidence": "Medium - directionally correct"
    },
    "estimated": {
      "criteria": "No performance or survey data - LLM estimated",
      "confidence": "Low - exploration only"
    }
  },
  
  "quadrant_analysis": {
    "description": "Plot dishes on Performance vs Opportunity axes",
    "quadrants": {
      "star": {
        "criteria": "High Performance (>3.5) + High Opportunity (>3.5)",
        "action": "EXPAND to more zones"
      },
      "potential": {
        "criteria": "Low Performance (<3.5) + High Opportunity (>3.5)",
        "action": "INVESTIGATE - good fit but not selling"
      },
      "cash_cow": {
        "criteria": "High Performance (>3.5) + Low Opportunity (<3.5)",
        "action": "MAINTAIN - selling but may not fit positioning"
      },
      "question_mark": {
        "criteria": "Low Performance (<3.5) + Low Opportunity (<3.5)",
        "action": "REVIEW - consider removing"
      }
    }
  },
  
  "hybrid_scoring_logic": {
    "description": "Use survey data where available, LLM estimation as fallback",
    "decision_tree": {
      "step_1": "Check if dish has survey data (n >= 5)",
      "step_2_if_yes": "Use measured score from survey, flag as 'Measured'",
      "step_2_if_no": "Use LLM estimation based on dish characteristics, flag as 'Estimated'"
    },
    "llm_estimation_prompt": "Score this dish type on {factor} from 1-5 based on its inherent characteristics. Consider: {factor_description}. Dish: {dish_type}. Respond with only the numeric score."
  }
}
